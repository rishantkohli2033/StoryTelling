<%- include("partials/header"); -%>

<%  stories.forEach(function(story){ %>

    <h1><%=story.title%></h1>
    <p>
    <% if(story.content.length>=100){ %>
    <%=story.content.substring(0, 100) + " ..."%>
    <a href="/stories/edit/<%=story._id%>">Edit</a>
    <% } else{ %>
        <%=story.content%>
        <a href="/stories/edit/<%=story._id%>">Edit</a>
    <% } %>
    </p>


<% }) %>

<%- include("partials/footer"); -%>